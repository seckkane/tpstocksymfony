{% extends 'accueil.html.twig' %}


{% block title %}Gestion des produits{% endblock %}

{% block body %}
     
            <div class="panel panel-warning col-md-6" style="overflow:scroll; height:355px;">
                <div class="panel-heading">Liste Des Produits</div>
                <div class="panel-body">

                    <table class="table table-striped">
                        <tr style="color:lightsalmon;"> 
                            <th>Id</th>
                            <th>Libelle</th>
                            <th>Stock</th>
                            <th style="text-align:center;">Modifier</th>
                            <th style="text-align:center;">Supprimer</th>
                        </tr>
                        {% for p in produits %}
                            <tr>
                                <td>{{ p.id }} </td>
                                <td>{{ p.libelle }}</td>
                                <td>{{ p.qtStock }}</td>
                                <td style="text-align:center;"><a href="{{ path('produit_edit',{'id':p.id})}}">
                                    <img class = "prod" src="{{asset('images/modif.png')}}" alt="Images d'accueil" />
                                </td>
                                <td style="text-align:center;"><a href="{{ path('produit_delete',{'id':p.id})}}">
                                    <img class = "prod" src="{{asset('images/delete.jpg')}}" alt="Images d'accueil" />
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                    
                </div>
            </div>

            <div class="panel panel-warning col-md-6">
                <div class="panel-heading">Formulaire de gestion Des Produits</div>
                <div class="panel-body">

                    {{ form(form)}}
                    
                </div>
            </div>

{% endblock %}
